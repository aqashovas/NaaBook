                                    <th scope="row" class="text-orange">@item.Subject.Name</th>
                                    <td>@item.Student.Fullname</td>
                                    <td>@item.MarkOrAttendanceFirst</td>
                                    <td>@item.MarkOrAttendanceSecond</td>
                                </tr>
                            }





                        </tbody>
                    </table>
                </div>
            </div>
        </div>
