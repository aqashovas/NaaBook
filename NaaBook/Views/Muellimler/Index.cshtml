@model List<Teacher> 

@{
    ViewBag.Title = "Index";
}
<section id="teacherlist">
    <div class="container">
        <table class="table table-dark">
            <thead>
                <tr>

                    <th scope="col">Ad Soyad Ata adı</th>
                    <th scope="col">Əlaqə nömrəsi</th>
                    <th scope="col">E-poçt adresi</th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Name @item.Surname @item.Fathername</td>
                        <td>@item.Phone</td>
                        <td><a href="#">@item.Mail</a></td>
                    </tr>
                }




            </tbody>
        </table>
    </div>
    
</section>